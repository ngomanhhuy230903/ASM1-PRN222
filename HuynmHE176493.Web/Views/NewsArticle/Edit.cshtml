@model HuynmHE176493.Data.Models.NewsArticle

@{
    ViewData["Title"] = "Chỉnh Sửa Tin Tức";
}

<h2>Chỉnh Sửa Tin Tức</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="NewsArticleId" />

    <div class="form-group">
        <label>Tiêu Đề</label>
        <input asp-for="NewsTitle" class="form-control" />
    </div>

    <div class="form-group">
        <label>Nội Dung</label>
        <textarea asp-for="NewsSource" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Danh Mục</label>
        <input asp-for="CategoryId" class="form-control" />
    </div>

    <div class="form-group">
        <label>Trạng Thái</label>
        <select asp-for="NewsStatus" class="form-control">
            <option value="true">Hoạt động</option>
            <option value="false">Ẩn</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
