@model HuynmHE176493.Data.Models.NewsArticle

@{
    ViewData["Title"] = "Thêm Tin Tức";
}

<h2>Thêm Tin Tức</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Tiêu Đề</label>
        <input asp-for="NewsTitle" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Tóm Tắt</label>
        <textarea asp-for="Headline" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Nội Dung</label>
        <textarea asp-for="NewsContent" class="form-control" required></textarea>
    </div>

    <div class="form-group">
        <label>Nguồn Bài Viết</label>
        <input asp-for="NewsSource" class="form-control" />
    </div>

    <div class="form-group">
        <label>Danh Mục</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
    </div>

    <div class="form-group">
        <label>Trạng Thái</label>
        <select asp-for="NewsStatus" class="form-control">
            <option value="true">Hoạt động</option>
            <option value="false">Ẩn</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Thêm</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
