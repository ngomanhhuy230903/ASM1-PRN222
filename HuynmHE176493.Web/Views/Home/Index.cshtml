@model List<HuynmHE176493.Data.Models.NewsArticle> // Model danh sách bài viết
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <h1 class="text-center">Danh sách bài viết</h1>

    @if (Model != null && Model.Count > 0)
    {
        <div class="row">
            @foreach (var article in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@article.NewsTitle</h5>
                            <p class="card-text">@article.Headline</p>
                            <a href="@Url.Action("Details", "NewsArticle", new { id = article.NewsArticleId })" class="btn btn-primary">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center">Chưa có bài viết nào.</p>
    }
</div>
