@model HuynmHE176493.Data.Models.SystemAccount

@{
    ViewData["Title"] = "Chi Tiết Tài Khoản";
}

<h2>Chi Tiết Tài Khoản</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.AccountId</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.AccountEmail</dd>

        <dt class="col-sm-2">Role:</dt>
        <dd class="col-sm-10">@(Model.AccountRole == 1 ? "Staff" : Model.AccountRole == 2 ? "Lecturer" : "Admin")</dd>

        <dt class="col-sm-2">Trạng thái:</dt>
        <dd class="col-sm-10">@(Model.IsActive ? "Hoạt động" : "Vô hiệu hóa")</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
<a asp-action="Edit" asp-route-id="@Model.AccountId" class="btn btn-warning">Chỉnh sửa</a>
