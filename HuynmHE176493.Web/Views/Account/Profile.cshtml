@model HuynmHE176493.Data.Models.SystemAccount

@{
    ViewData["Title"] = "Thông Tin Cá Nhân";
}

<div class="container mt-4">
    <h1 class="text-center">Thông Tin Cá Nhân</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <form asp-action="Profile" method="post">
        <input type="hidden" asp-for="AccountId" />
        <input type="hidden" asp-for="AccountRole" /> <!-- Giữ nguyên role -->
        <input type="hidden" asp-for="IsActive" /> <!-- Giữ nguyên trạng thái -->

        <div class="form-group">
            <label asp-for="AccountName">Tên</label>
            <input asp-for="AccountName" class="form-control" />
            <span asp-validation-for="AccountName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AccountEmail">Email</label>
            <input asp-for="AccountEmail" class="form-control" />
            <span asp-validation-for="AccountEmail" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Lưu Thay Đổi</button>
            <a asp-action="ChangePassword" class="btn btn-warning">Đổi Mật Khẩu</a>
            <a asp-controller="AdminDashboard" asp-action="Index" class="btn btn-secondary">Quay Lại Dashboard</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}