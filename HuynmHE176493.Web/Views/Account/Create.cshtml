@model HuynmHE176493.Data.Models.SystemAccount

@{
    ViewData["Title"] = "Tạo Tài Khoản";
}

<h2>Tạo Tài Khoản</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Email:</label>
        <input asp-for="AccountEmail" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Password:</label>
        <input asp-for="AccountPassword" type="password" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Role:</label>
        <select asp-for="AccountRole" class="form-control">
            <option value="1">Staff</option>
            <option value="2">Lecturer</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
